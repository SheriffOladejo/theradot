<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/button_green</item>
        <item name="colorPrimaryDark">@color/button_green</item>
        <item name="colorAccent">@color/button_green</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/button_green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/button_green</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/button_green</item>
    </style>

    <style name="Theme.picker" parent="android:Theme.Holo.Light">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>
    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/button_green</item>
    </style>

</resources>