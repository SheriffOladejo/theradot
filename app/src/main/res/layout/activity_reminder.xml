<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ReminderActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It's time for your exercise"
        android:fontFamily="@font/aventa_bold"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/open_app"
        android:layout_below="@id/text"
        android:fontFamily="@font/aventa_bold"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:background="@drawable/all_round_corners_15dp"
        android:backgroundTint="@color/button_green"
        android:text="OPEN APP"
        android:textColor="@color/white"/>

</RelativeLayout>