<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/exercise_category"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_button_background">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/done_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_android"/>

        <TextView
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:fontFamily="@font/aventa_bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High five!"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aventa_regular"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="Your activity is\n complete and has been logged"/>

        <Button
            android:fontFamily="@font/aventa_bold"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:background="@drawable/all_round_corners_15dp"
            android:backgroundTint="@color/button_green"
            android:text="GO BACK HOME"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>