<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/details_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/left_arrow"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My profile"
                android:textColor="@color/black"
                android:fontFamily="@font/aventa_bold"
                android:textSize="22sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic information"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="8dp"
                android:padding="3dp">

                <RelativeLayout
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/all_round_corners_5dp"
                        android:src="@drawable/ic_user"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/button_green"
                        android:layout_below="@id/profile_image"
                        android:id="@+id/select_profile_image"/>

                    <LinearLayout
                        android:layout_toRightOf="@id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:id="@+id/fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sheriff Oladejo"
                            android:textColor="@color/black"
                            android:fontFamily="@font/aventa_regular"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/card_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OAUTHC123"
                            android:fontFamily="@font/aventa_regular"
                            android:layout_marginTop="8dp"
                            android:textSize="16sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/black"/>

                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+234 8164727987"
                            android:fontFamily="@font/aventa_regular"
                            android:layout_marginTop="8dp"
                            android:textSize="16sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/black"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal information"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:fontFamily="@font/aventa_regular"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <EditText
                android:editable="false"
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:inputType="textCapSentences"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:enabled="false"
                android:background="@drawable/edittext_curved_corner"
                android:layout_marginTop="10dp"
                android:hint="Gender"
                android:paddingStart="15dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:fontFamily="@font/aventa_regular"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <EditText
                android:editable="false"
                android:id="@+id/date_of_birth"
                android:layout_width="match_parent"
                android:inputType="textCapSentences"
                android:layout_height="50dp"
                android:enabled="false"
                android:textColor="@color/black"
                android:background="@drawable/edittext_curved_corner"
                android:layout_marginTop="10dp"
                android:hint="Date of birth"
                android:paddingStart="15dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eye color"
                android:fontFamily="@font/aventa_regular"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <EditText
                android:editable="false"
                android:id="@+id/eye_color"
                android:layout_width="match_parent"
                android:inputType="textCapSentences"
                android:layout_height="50dp"
                android:enabled="false"
                android:textColor="@color/black"
                android:background="@drawable/edittext_curved_corner"
                android:layout_marginTop="10dp"
                android:hint="Eye color"
                android:paddingStart="15dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:fontFamily="@font/aventa_regular"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <EditText
                android:editable="false"
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:inputType="textCapSentences"
                android:layout_height="50dp"
                android:enabled="false"
                android:textColor="@color/black"
                android:background="@drawable/edittext_curved_corner"
                android:layout_marginTop="10dp"
                android:hint="Height"
                android:paddingStart="15dp"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>