<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/left_arrow"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textStyle="bold"
                android:fontFamily="@font/aventa_bold"
                android:textSize="25sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey, let's get you started!"
                android:textColor="@color/black"
                android:fontFamily="@font/aventa_bold"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/first_name_layout"
                android:visibility="gone"
                android:fontFamily="@font/aventa_regular"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:editable="false"
                    android:id="@+id/first_name"
                    android:fontFamily="@font/aventa_regular"
                    android:paddingStart="10dp"
                    android:background="@drawable/edittext_curved_corner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="First Name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_layout"
                android:visibility="gone"
                android:fontFamily="@font/aventa_regular"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:editable="false"
                    android:id="@+id/last_name"
                    android:fontFamily="@font/aventa_regular"
                    android:paddingStart="10dp"
                    android:background="@drawable/edittext_curved_corner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Last Name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:fontFamily="@font/aventa_regular"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/card_number"
                    android:fontFamily="@font/aventa_regular"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:background="@drawable/edittext_curved_corner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Card number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:fontFamily="@font/aventa_regular"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email"
                    android:fontFamily="@font/aventa_regular"
                    android:paddingStart="10dp"
                    android:background="@drawable/edittext_curved_corner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email"/>

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:text="+234(0)"
                    android:textColor="@color/black"
                    android:fontFamily="@font/aventa_regular"
                    android:textSize="18sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_toRightOf="@id/country_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aventa_regular">

                    <EditText
                        android:id="@+id/phone_number"
                        android:layout_marginStart="5dp"
                        android:paddingStart="10dp"
                        android:fontFamily="@font/aventa_regular"
                        android:background="@drawable/edittext_curved_corner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text=""
                        android:inputType="number"
                        android:maxLength="10"
                        android:hint="Phone Number"/>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:fontFamily="@font/aventa_regular"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.maksim88.passwordedittext.PasswordEditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:fontFamily="@font/aventa_regular"
                    android:paddingStart="10dp"
                    android:background="@drawable/edittext_curved_corner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:fontFamily="@font/aventa_regular"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.maksim88.passwordedittext.PasswordEditText
                    android:id="@+id/confirm_password"
                    android:fontFamily="@font/aventa_regular"
                    android:paddingStart="10dp"
                    android:background="@drawable/edittext_curved_corner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Confirm Password"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:layout_below="@id/ll"
            android:id="@+id/next"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/all_round_corners_5dp"
            android:backgroundTint="@color/button_green"
            android:text="NEXT"
            android:textSize="18sp"
            android:fontFamily="@font/aventa_bold"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/white"/>

    </RelativeLayout>

</ScrollView>

