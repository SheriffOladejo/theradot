<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/aventa_bold"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:id="@+id/congratulations_text"/>

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/aventa_regular"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/congratulations_text"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sit fames cras placerat praesent sed donec. Egestas ut quam diam tellus. Platea es"/>

</RelativeLayout>