<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_android"
            android:backgroundTint="#F5F5F9"
            android:background="@drawable/all_round_corners_5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back\nSheriff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/aventa_bold"
            android:textColor="@color/black"
            android:id="@+id/congratulations_text"/>

        <TextView
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/aventa_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/congratulations_text"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sit fames cras placerat praesent sed donec. Egestas ut quam diam tellus. Platea es"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/continue_to_app"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/all_round_corners_5dp"
                android:backgroundTint="@color/black"
                android:text="CONTINUE WITH THERADOT"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/aventa_bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/request_code"
                android:selectAllOnFocus="false"
                android:linksClickable="false"
                android:autoLink="all"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_show_welcome_back_screen"
                android:textColor="@color/button_green"
                android:fontFamily="@font/aventa_regular"
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>